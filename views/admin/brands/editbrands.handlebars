s<!-- Body -->
<div class="container mt-3">
    <form action="/admin/brands/editbrands/{{listBRAND.BRAND_ID}}?action=PUT" method="post" class="needs-validation"
        novalidate>
        <div class="card">
            <div class="card-header">
                تعديل بيانات قسم ({{listBRAND.BRAND_NAME}})
            </div>
            <div class="card-body">
                <div class="col">
                    <!-- brand ID -->
                        <div class="input-group mb-3">
                            <span class="input-group-text" id="brandid-addon">كود العلامة</span>
                            <input type="text" value="{{listBRAND.BRAND_ID}}" class="form-control" aria-label="brandid"
                                aria-describedby="brandid-addon" disabled>
                            <div class="pe-2">
                                <i class="bi bi-info-circle-fill"></i>
                                يتم إنشاء كود العلامة بشكل تلقائي
                            </div>
                        </div>
                </div>
                <div class="col">
                    <!-- brand NAME -->
                    <div class="input-group mb-3 has-validation">
                        <span class="input-group-text" id="brandName-addon">إسم القسم الجديد</span>
                        <input name="brandName" id="brandName" type="text" value="{{listBRAND.BRAND_NAME}}"
                            class="form-control" placeholder="مثال: أقراص" aria-label="brandName"
                            aria-describedby="brandName-addon" required>
                        <div class="invalid-feedback">
                            من فضلك أدخل إسم العلامة بشكل صحيح
                        </div>
                    </div>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-outline-warning">إعتماد التعديلات</button>
                </div>
            </div>
        </div>
    </form>
</div>