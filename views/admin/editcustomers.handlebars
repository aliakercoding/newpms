<!-- Body -->
<div class="container mt-3">
    <form action="/admin/editcustomers/{{editcustomers._id}}?action=PUT" method="post" class="needs-validation" novalidate>
        <div class="accordion" id="NewClientAccordion">
            <div class="accordion-item">
                <!-- MAIN CLIENT INFO -->
                <h2 class="accordion-header">
                    <button class="accordion-button" type="button" data-bs-toggle="collapse"
                        data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                        بيانات العميل الأساسية
                    </button>
                </h2>
                <div id="collapseOne" class="accordion-collapse collapse show" data-bs-parent="#NewClientAccordion">
                    <div class="accordion-body">
                        <!-- CLIENT ID -->
                        <div class="input-group mb-3">
                            <span class="input-group-text" id="clientid-addon">كود العميل</span>
                            <input type="text" name="clientID" value="{{editcustomers._id}}" class="form-control" placeholder="مثال: 1234567890"
                                aria-label="clientid" aria-describedby="clientid-addon" disabled>
                            <div class="pe-2">
                                <i class="bi bi-info-circle-fill"></i>
                                يتم إنشاء كود المورد بشكل تلقائي
                            </div>
                        </div>
                        <!-- CLIENT NAME -->
                        <div class="input-group mb-3 has-validation">
                            <span class="input-group-text" id="clientname-addon">اسم العميل</span>
                            <input type="text" name="customerName" value="{{editcustomers.customer_name}}" class="form-control" placeholder="مثال: على"
                                aria-label="clientname" aria-describedby="clientname-addon" required>
                            <div class="invalid-feedback">
                                من فضلك أدخل اسم العميل بشكل صحيح
                            </div>
                        </div>
                        <!-- CLIENT PHONE -->
                        <div class="input-group mb-3 has-validation">
                            <span class="input-group-text" id="clientphone-addon">رقم هاتف العميل</span>
                            <input type="text" name="customerContact" value="{{editcustomers.customer_contact}}" class="form-control" placeholder="مثال: 001"
                                aria-label="clientphone" aria-describedby="clientphone-addon" required>
                            <div class="invalid-feedback">
                                من فضلك أدخل رقم التواصل بشكل صحيح
                            </div>
                        </div>
                        <!-- CLIENT ADDRESS -->
                        <div class="input-group mb-3">
                            <span class="input-group-text" id="clientaddress-addon">عنوان العميل</span>
                            <textarea name="customerAddress" class="form-control client-address-addon"
                                aria-label="clientaddress">{{editcustomers.customer_address}}</textarea>
                        </div>
                    </div>
                </div>
            </div>
            <div class="accordion-item">
                <!-- EXTRA CLIENT INFO -->
                <h2 class="accordion-header">
                    <button class="accordion-button" type="button" data-bs-toggle="collapse"
                        data-bs-target="#collapseTwo" aria-expanded="true" aria-controls="collapseTwo">
                        بيانات العميل الإضافية
                    </button>
                </h2>
                <div id="collapseTwo" class="accordion-collapse collapse show" data-bs-parent="#NewClientAccordion">
                    <div class="accordion-body">

                        <!-- CLIENT ACQUIRED POINTS -->
                        <div class="input-group mb-3 has-validation">
                            <span class="input-group-text" id="clientphone-addon">نقاط العميل</span>
                            <input type="number" name="customerAcquiredPoints" value="{{editcustomers.total_acquired_points}}" step="0.001"
                                class="form-control" aria-label="clientphone" aria-describedby="clientphone-addon"
                                required>
                            <div class="invalid-feedback">
                                قيمة خاطئة
                            </div>
                        </div>
                        <!-- CLIENT CREDIT -->
                        <div class="input-group mb-3 has-validation">
                            <span class="input-group-text" id="clientphone-addon">رصيد العميل</span>
                            <input type="number" name="customerCredit" value="{{editcustomers.total_credit}}" step="0.001" class="form-control"
                                aria-label="clientphone" aria-describedby="clientphone-addon" required>
                            <div class="invalid-feedback">
                                قيمة خاطئة
                            </div>
                        </div>



                    </div>
                </div>
            </div>
        </div>

        <div class="mx-auto my-2 py-2 text-center border">
            <button type="submit" class="btn btn-warning" id="UpdateCustomer">تعديل بيانات العميل
            </button>

        </div>
    </form>
</div>